<h1>Volunteers for project <%= @project.name %> </h1>

<ul>
  <% @volunteers.each() do |volunteer| %>

      <li><a href="/volunteer/<%= volunteer.id %>"><%= volunteer.name %></a></li>

  <% end %>
</ul>

<h2>Add a new volunteer</h2>

<form action="/<%= @project.id %>" method="post">
  <label for="word">New Volunteer Name</label>
    <input type="text" name="name" required>
  <button type="submit">Add a Volunteer!</button>
</form>
<br>
<h2>Remove a volunteer</h2>
<form action="/<%= @project.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <select name='delete_name'>
    <% @volunteers.each() do |volunteer| %>
      <% if volunteer.project_id == @project.id %>
        <option value='<%=volunteer.id%>'><%=volunteer.name%></option>
      <% end %>
    <% end %>
  </select>
  <button type="submit">Remove volunteer</button>
</form>
<br>
<h2>Update project name</h2>
<form action="/<%= @project.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="name">Project Name</label>
    <input type="text" name="update_name">
  </div>
  <button type="submit">Update Project Name!</button>
</form>
<br>
<a href="/">Home</a>
