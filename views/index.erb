<h1>List of current projects</h1>

<ul>
  <% @projects.each() do |project| %>
  <li><a href="/<%= project.id %>"><%= project.name %></a></li>
    <% end %>
</ul>

<h2>Add a new project</h2>

<form action="/" method="post">
  <label for="word">New Project Name</label>
    <input type="text" name="project_name">
  <button type="submit">Add a project!</button>
</form>

<h2>Delete a project</h2>
<form action="/" method="post">
  <input type="hidden" name="_method" value="delete">
  <select name='delete_project'>
    <% @projects.each() do |project| %>
      <option value='<%=project.id%>'><%=project.name%></option>
    <% end %>
  </select>
  <button type="submit">Remove project</button>
</form>
